<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="thruster_views.name_converter" class="Thruster\Bundle\ViewBundle\View\ViewNameParser">
            <argument type="service" id="kernel"/>
        </service>

        <service id="thruster_views.view_resolver" class="Thruster\Bundle\ViewBundle\View\ViewResolver">
            <argument type="service" id="service_container"/>
            <argument type="service" id="thruster_views.name_converter"/>
        </service>
    </services>
</container>
